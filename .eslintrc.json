{
  "root": true,
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "plugin:vue/essential",
    "@vue/airbnb",
    "plugin:prettier/recommended",
    "@vue/typescript"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "parser": "@typescript-eslint/parser"
  },
  "plugins": [
    "import",
    "prettier",
    "vue"
  ],
  "rules": {
    "no-console": [
      "error",
      {
        "allow": [
          "error",
          "warn",
          "info"
        ]
      }
    ],
    "prettier/prettier": "error"
  }
}
