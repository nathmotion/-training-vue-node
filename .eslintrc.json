{
  "root": true,
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["plugin:vue/essential", "@vue/airbnb", "@vue/typescript", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": 2020,
    "parser": "@typescript-eslint/parser"
  },
  "plugins": ["import", "prettier", "vue"],
  "rules": {
    "no-console": [
      "error",
      {
        "allow": ["error", "warn", "info"]
      }
    ],
    "prettier/prettier": "error"
  }
}
